<h3> Department Index</h3>
   
<table>
      <tr>
         <th>Dept</th>
         <th>Email</th>
         <th>Students</th>
         <th>Action</th>
      </tr>
      <% @departments.each do |t| %>
        <tr>
            <td><%= t.dept %>  </td>
            <td><%= t.mail %> </td>
            <td><%=pluralize(t.students.count,"student") %> </td>
            <td><%= link_to 'Show' , department_path(t) %> </td>
            <td><%= link_to 'Edit' , edit_department_path(t)%> </td>
        </tr>
      <% end %>
</table>