<% if @department.errors.any? %>
   <h2>The following errors prevented the department from being saved</h2>
   <ul>
     <% @department.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
     <% end %>
   </ul>
 <% end %>

 <%= form_with(model: @department, local: true) do |f| %>

   <p>
     <%= f.label :dept %><br/>
     <%= f.text_field :dept %>
   </p>

   <p>
     <%= f.label :mail %><br/>
     <%= f.email_field :mail%>
   </p>

   <p>
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
   </p>
   <p>
     <%= f.submit %>
   </p>
<%end%>