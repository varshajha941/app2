<h3> Department Details</h3>
   <p> <strong> Dept </strong> <%= @department.dept %> </p>
   <p><strong>Email </strong> <%=@department.mail%> </p>
   
<table>
      <tr>
         <th>Name</th>
         <th>Roll</th>
      </tr>
      <% @studs.each do |student| %>
        <tr>
            <td><%= student.name %>  </td>
            <td><%= student.roll %> </td>
        </tr>
      <% end %>
</table>
    

     
    <%= link_to 'Delete' , department_path(@department),method: :delete, data:{ confirm:"Are you sure?"} %> |
    <%= link_to 'Edit' , edit_department_path(@department)%> 

