
<div class="container">
<% @studs.each do |student| %>
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
          by Mashrur Hossain
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= link_to student.name, student_path(student), class: "text-success" %></h5>
          <p class="card-text"><%= student.roll %></p>
          <%= link_to "View", student_path(student), class: "btn btn-outline-success" %>
          <%= link_to "Edit", edit_student_path(student), class: "btn btn-outline-info" %>
          <%= link_to "Delete", student_path(student), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
        </div>
        <div class="card-footer text-muted">
          <small>Created 
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>
</div> 