<h3>INDEXing</h3>
<table>
 <tr>
 <th>Name</th>
 <th>Roll</th>
 <th colspan = '3'>Action</th>
 </tr>
<% @studs.each do |student| %>
 <tr>
  <td><%= student.name %>  </td>
  <td><%= student.roll %> </td>
  <td><%= link_to 'Show' , student_path(student) %> </td>
  <td><%= link_to 'Delete' , student_path(student),method: :delete, data:{ confirm:"Are you sure?"} %> </td>
  <td><%= link_to 'Edit' , edit_student_path(student)%> </td>
  </tr>
<% end %>
</table>
<p>
<%= link_to 'Create new student',students_new_path() %>
</p>