<% if @student.errors.any? %>
   <h2>The following errors prevented the student from being saved</h2>
   <ul>
     <% @student.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
     <% end %>
   </ul>
 <% end %>

 <%= form_with(model: @student, local: true) do |f| %>

   <p>
     <%= f.label :name %><br/>
     <%= f.text_field :name %>
   </p>

   <p>
     <%= f.label :roll %><br/>
     <%= f.number_field :roll %>
   </p>

   <p>
     <%= f.submit %>
   </p>
<%end%>